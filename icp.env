# ICP Environment Variables
# متغيرات البيئة لـ ICP

# ICP Network Configuration
ICP_NETWORK=ic
ICP_PROVIDER=https://ic0.app
ICP_LOCAL_BIND=127.0.0.1:4943

# Canister Configuration
FRONTEND_CANISTER_NAME=idev_shipping_frontend
BACKEND_CANISTER_NAME=idev_shipping_backend
STORAGE_CANISTER_NAME=idev_shipping_storage

# Frontend Configuration
VITE_ICP_NETWORK=ic
VITE_BACKEND_CANISTER_ID=93343-A7BDB-4F45F
VITE_FRONTEND_CANISTER_ID=93343-A7BDB-4F45F

# Backend Configuration
BACKEND_PORT=3000
DATABASE_URL=postgresql://web3shipping:password123@postgres:5432/web3_shipping_platform
REDIS_URL=redis://redis:6379
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Web3 Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
PRIVATE_KEY=your-private-key-here

# ICP Specific
ICP_CYCLES_WALLET_ID=
ICP_CYCLES_AMOUNT=1000000000000

# Security
CORS_ORIGINS=https://*.ic0.app,https://*.icp0.io
ALLOWED_HOSTS=*.ic0.app,*.icp0.io

# Logging
RUST_LOG=info
LOG_LEVEL=info

# Performance
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30
RATE_LIMIT=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
